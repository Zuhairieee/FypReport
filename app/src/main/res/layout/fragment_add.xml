<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg9"
    tools:context=".ridesFragment">


    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="294dp"
        android:layout_marginBottom="441dp"
        android:src="@drawable/baseline_place_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="309dp"
        android:layout_marginEnd="294dp"
        android:layout_marginBottom="372dp"
        android:src="@drawable/baseline_place_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etLF"
        android:layout_width="208dp"
        android:layout_height="56dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="435dp"
        android:ems="10"
        android:hint="Leaving from"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSearch"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="616dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="46dp"
        android:backgroundTint="#6077C0"
        android:text="Publish"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="178dp"
        android:layout_height="42dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="505dp"
        android:text="Offer Your Rides"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etGT"
        android:layout_width="208dp"
        android:layout_height="56dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="367dp"
        android:ems="10"
        android:hint="Going to"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etDate"
        android:layout_width="208dp"
        android:layout_height="56dp"
        android:layout_marginStart="133dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="287dp"
        android:clickable="true"
        android:ems="10"
        android:focusable="false"
        android:hint="Date"
        android:inputType="date"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etNoOfPax"
        android:layout_width="208dp"
        android:layout_height="56dp"
        android:layout_marginStart="133dp"
        android:layout_marginTop="468dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="207dp"
        android:ems="10"
        android:hint="Max Passengers"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etTime"
        android:layout_width="208dp"
        android:layout_height="56dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="548dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="127dp"
        android:clickable="true"
        android:ems="10"
        android:focusable="false"
        android:hint="Time"
        android:inputType="time"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="389dp"
        android:layout_marginEnd="294dp"
        android:layout_marginBottom="292dp"
        android:src="@drawable/baseline_calendar_month_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="60dp"
        android:layout_height="50dp"
